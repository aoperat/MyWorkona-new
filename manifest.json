{
  "manifest_version": 3,
  "name": "MyWorkona",
  "version": "1.0.0",
  "description": "Workona 유사 탭 관리 Chrome 확장 프로그램",
  "permissions": [
    "tabs",
    "storage",
    "windows"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "MyWorkona",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
